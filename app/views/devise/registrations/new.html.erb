<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


        <div class="wrap-around">

            <div class="form-group">

                <%= f.text_field :email,:placeholder=> " Email", :class => "form-control" %>

            </div>
            <div class="form-group">
                <%= f.text_field :password, :placeholder=> " Password", :class => "form-control"%>

            </div>
            <%= f.submit 'Sign In', :class=> 'btn btn-primary', :style => "background-color: #FF9900;" %>



        </div>


        <div id="sign-up" class="new-user">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Create Account</a>

                <ul class="dropdown-menu dropdown-lr animated flipInX" role="menu" style="width:100%; background-color:#FF9900; padding:20px;">



                    <div id="legend">
                        <legend class="">Register</legend>
                    </div>

                    <div class="control-group">


                        <%= f.label :firstname %>

                            <div class="controls">

                                <%= f.text_field :firstname , :class=> "form-control"%>
                            </div>
                    </div>
                    <div class="control-group">


                        <%= f.label :lastname %>

                            <div class="controls">

                                <%= f.text_field :lastname , :class=> "form-control"%>
                            </div>
                    </div>

                    <div class="control-group">


                        <%= f.label :email %>

                            <div class="controls">

                                <%= f.email_field :email , :oninvalid=>"setCustomValidity('Invalid email address')",  :class=> "form-control"%>
                                
                            </div>
                    </div>

                    <div class="control-group">

                        <%= f.label :password %>

                            <div class="controls">

                                <%= f.password_field :password , :class=> "form-control"%>
                            </div>
                    </div>

                    <div class="control-group">

                        <%= f.label :confirmpassword %>

                            <div class="controls">

                                <%= f.password_field :confirmpassword , :class=> "form-control"%>
                                    <p class="help-block">Please confirm password</p>
                            </div>
                    </div>

                    <div class="control-group">


                        <div class="controls">
                            <%= f.submit 'Sign Up', :class=> 'btn btn-primary' %>

                        </div>
                    </div>


                </ul>

            </li>


        </div>




        <% end %>